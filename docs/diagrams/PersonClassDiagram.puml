@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR
skinparam groupInheritance 1

top to bottom direction

Abstract Class "{abstract}\nItem" as Item
Abstract Class "{abstract}\nPerson" as Person
together{
Class Supplier
Class Customer
}
Abstract Class "{abstract}\nName" as Name

Class PersonName
Class PersonAddress
Class PersonEmail
Class PersonPhone
Class Tag
Class PersonList extends ItemList
Class UniquePersonList extends UniqueItemList

Class ItemList<T extends Item>
Class UniqueItemList<T>

ItemList *-r> "1 " UniqueItemList
UniqueItemList -r> Item

PersonList *-r> "1 " UniquePersonList
UniquePersonList -r> Person
Person *--> "1" PersonName
Person *--> "1" PersonPhone
Person *--> "     1" PersonEmail
Person *--> "1" PersonAddress
Person *--> "*" Tag
Person -u|> Item

Person <|- Supplier
Person <|- Customer

PersonName --|> Name

@enduml
